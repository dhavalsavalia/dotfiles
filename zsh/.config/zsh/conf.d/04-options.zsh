setopt correct  # Correct spelling errors
setopt extendedglob  # Enable extended globbing. This allows for more powerful pattern matching.
setopt nocaseglob  # Case-insensitive globbing
setopt rcexpandparam  # Perform parameter expansion, command substitution, and arithmetic expansion in prompts
setopt nocheckjobs  # Do not check if background jobs have completed before exiting the shell
setopt numericglobsort  # Sort filenames numerically when a numeric glob is used
