// Full development layout with editor, git, and shell
// Optimized for typical dev workflow

layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:tab-bar"
        }
        children
        pane size=2 borderless=true {
            plugin location="zellij:status-bar"
        }
    }

    tab name="editor" {
        pane split_direction="vertical" {
            pane size="70%" {
                command "lvim"
            }
            pane size="30%" split_direction="horizontal" {
                pane  // shell for quick commands
                pane  // another shell or tests
            }
        }
    }

    tab name="git" {
        pane {
            command "lazygit"
        }
    }

    tab name="terminal"
}
