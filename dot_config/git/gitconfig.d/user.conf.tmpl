[user]
  name = {{ .git_name }}
  email = {{ .git_email }}
{{- if eq .profile "home" }}
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIBTNCD660hqdxQDA7o+KmeDGZtbcu+A76k4dAuFfvmvV

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
{{- else if eq .profile "garda" }}
  # Work profile - add your work signing key here if needed
  # signingkey = ssh-ed25519 YOUR_WORK_KEY
{{- end }}

